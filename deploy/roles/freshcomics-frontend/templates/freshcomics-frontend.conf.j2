server {
    listen 80;
    server_name {{ freshcomics_frontend_servername }};
    access_log /var/log/nginx/freshcomics-frontend.access.log main;
    location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;
        proxy_pass http://{{ freshcomics_frontend_host }}:{{ freshcomics_frontend_port }};
    }
}